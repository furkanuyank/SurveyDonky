@model GetTestPollsterDetailModel

<form asp-action="GetPollsterDetail" asp-controller="Test" asp-area="" method="post" autocomplete="off">

    <div class="form-group mt-5">

        <div class="mb-3">
            <label for="PollsterName" class="form-label dark-theme-texts">Öğrenci Adı</label>
            <input type="text" asp-for="@Model.Name" style="background-color: aliceblue; min-width: 15rem; width: 50%" class="form-control" id="PollsterName" required maxlength="25">
        </div>

        <div class="mb-3">
            <label for="SchoolId" class="form-label dark-theme-texts">Öğrenci Numarası</label>
            <input type="text" asp-for="@Model.SchoolId" style="background-color:aliceblue; min-width: 15rem; width: 50%" class="form-control" id="SchoolId" required maxlength="20">
            <span asp-validation-for="@Model.SchoolId" style="color:red"></span>
        </div>
    </div>
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.SchoolId)
    @Html.HiddenFor(model => model.TestId)
<a asp-action="Index" asp-controller="Test" asp-area="" class="btn dark-theme-texts n">Geri Dön</a>
    <button type="submit" class="btn dark-theme-texts p">Devam et</button>
</form>

<style>
    .dark-theme-texts {
        color: rgb(223,223,223);
    }

    .p {
        background-color: #495057;
        border-color: #0093ff;
    }

        .p:hover {
            color: #0093ff;
        }

    .n {
        background-color: #495057;
        border-color: #b5a800;
    }

        .n:hover {
            color: #b5a800;
        }
</style>