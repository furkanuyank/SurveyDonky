@model PasswordModel

        <div class="container"style="text-align:center;">

                <form asp-action="AdminLogin" asp-controller="Login" asp-area="" method="post">

                    <div style="width: 40%; min-width: 20rem; margin: 0 auto">
                        <h6><label for="password-field" class="dark-theme-texts">Password</label></h6>
                        <input asp-for="@Model.Password" id="password-field" type="password" class="form-control" style="background-color:aliceblue">
                    </div>
                    <br />
                    <div class="form-group btn-group" style="width:40%;min-width:20rem;">
                        <a asp-action="Index" asp-controller="Home" asp-area="" style="margin-right: 1.5rem; border-radius: 5px;" class=" btn dark-theme-texts n">Geri Dön</a>
                        <button style="margin-left:1.5rem; border-radius:5px;" type="submit" class=" btn dark-theme-texts p">Giriş Yap</button>
                    </div>
                </form>
        </div>

<style>
    .dark-theme-texts {
        color: rgb(223,223,223);
    }

    .p {
        background-color: #495057;
        border-color: #0093ff;
    }

        .p:hover {
            color: #0093ff;
        }

    .n {
        background-color: #495057;
        border-color: #b5a800;
    }

        .n:hover {
            color: #b5a800;
        }
</style>
